<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Upload Movie</title>

    <link rel="stylesheet" href="./views/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="./views/assets/css/upstyle.css">
    <link rel="stylesheet" href="./views/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="../node_modules/bootstrap-fileinput/css/fileinput.min.css">
    <link rel="stylesheet" href="../node_modules/bootstrap-table/dist/bootstrap-table.css">
    <link rel="stylesheet" href="../node_modules/bootstrap-fileinput/css/fileinput-rtl.min.css">
    <link rel="stylesheet" href="http://ico.z01.com/zico.min.css">
    <style>
        body {
            min-height: 2000px;
            padding-top: 70px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-default navbar-fixed-top" style="font-size: 14px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Admin</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/manage">Account Management</a></li>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Inventory</a></li>
                    <li><a href="#">Rewards</a></li>
                    <li class="active"><a href="/upload">Upload Film<span class="sr-only">(current)</span></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="signin signup popup-up">
        <div class="container">
            <div class="sign-content popup-in-content">
                <div class="popup-in-txt">
                    <h2>Upload Movie</h2>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="signin-form">
                                <form action="http://127.0.0.1:3000/api/picture/upload" method="POST"
                                    enctype="multipart/form-data" id='uploadForm' target="form">
                                    <div class="form-group">
                                        <label for="signin_form">Movie Title</label>
                                        <input type="text" class="form-control" id="movie_title"
                                            placeholder="Movie Title">
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">Movie Time</label>
                                        <input type="text" class="form-control" id="movie_time"
                                            placeholder="Movie Time(minutes)">
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">Movie Image</label>
                                        <input id="input-id" type="file" class="file" name='file'>
                                    </div>
                                    <div class="form-group">
                                        <label for="signin_form">Movie Type</label>
                                        <select class="form-control" id="movie_type">
                                            <option>comedy</option>
                                            <option>Thriller</option>
                                            <option>Romance</option>
                                            <option>Horror</option>
                                            <option>Action</option>
                                            <option>Sci-Fi</option>
                                            <option>Crime</option>
                                            <option>War</option>
                                            <option>Narrative</option>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="signin-footer">
                                                <button type="submit" class="btn signin_btn" id="upload">
                                                    Upload
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <iframe name="form" id="form" style="display: none;"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="col">
                <div id="toolbar" class="btn-group">
                </div>
                <div>
                    <table id="table"></table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editMovie" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Edit Movie Information</h4>
                </div>
                <div class="form-box">
                    <form action="http://127.0.0.1:3000/api/picture/upload" method="POST" enctype="multipart/form-data"
                        id='submitChangeForm' target="form">
                        <div class="form-item">
                            <label for="signin_form">Movie Title</label>
                            <input type="text" id="movie_title_c">
                        </div>
                        <div class="form-item">
                            <label for="signin_form">Movie Time</label>
                            <input type="text" id="movie_time_c">
                        </div>
                        <div class="form-item">
                            <label for="signin_form">Movie Image</label>
                            <input id="input-id_c" type="file" class="file" name='file'>
                        </div>
                        <div class="form-item">
                            <label for="signin_form">Movie Type</label>
                            <select id="movie_type_c">
                                <option>comedy</option>
                                <option>Thriller</option>
                                <option>Romance</option>
                                <option>Horror</option>
                                <option>Action</option>
                                <option>Sci-Fi</option>
                                <option>Crime</option>
                                <option>War</option>
                                <option>Narrative</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id='submitChange'>Submit</button>
                </div>
            </div>
        </div>
    </div>

    <script src="./views/assets/js/jquery.js"></script>
    <script src="./views/assets/js/bootstrap.min.js"></script>
    <script src="../node_modules/bootstrap-table/dist/bootstrap-table.js"></script>
    <script src="../node_modules/bootstrap-table/dist/extensions/toolbar/bootstrap-table-toolbar.js"></script>
    <script src="../node_modules/bootstrap-table/dist/extensions/export/bootstrap-table-export.js"></script>
    <script src="./views/assets/js/tableExport.min.js"></script>
    <script src="./views/assets/js/alert.js"></script>
    <script src="../node_modules/bootstrap-fileinput/js/fileinput.min.js"></script>
    <script src="../node_modules/jquery-form/src/jquery.form.js"></script>

    <script>


        $("#input-id").fileinput({
            showUpload: false,
            previewFileType: 'any',
            browseClass: 'btn btn-primary',
            allowedFileTypes: ['image'],
            previewFileIcon: "<i class='glyphicon glyphicon-ok'></i>",
            allowedFileExtensions: ['jpg', 'png'],
            allowedPreviewTypes: ['image'],
        });

        $("#input-id_c").fileinput({
            showUpload: false,
            previewFileType: 'any',,
            browseClass: 'btn btn-primary',
            allowedFileTypes: ['image'],
            previewFileIcon: "<i class='glyphicon glyphicon-ok'></i>",
            allowedFileExtensions: ['jpg', 'png'],
            allowedPreviewTypes: ['image'], 
        });
        $(function () {
            $('#table').bootstrapTable({
                url: 'http://localhost:3000/api/picture/getMovieAsJson',
                method: 'get',
                striped: true,
                toolbar: '#toolbar',
                pagination: true,
                pageNumber: 1,
                pageSize: 5,
                pageList: [1, 3, 5, 10],
                search: true,
                clickToSelect: true,
                showColumns: true,
                showRefresh: true,
                showExport: true,
                exportDataType: "all",
                columns: [{
                    field: 'movie_title',
                    title: 'movie_title'
                }, {
                    field: 'movie_time',
                    title: 'movie_time'
                }, {
                    field: 'movie_image',
                    title: 'movie_image'
                },
                {
                    field: 'movie_type',
                    title: 'movie_type'
                },
                {
                    field: 'operator',
                    title: 'Action',
                    align: 'center',
                    valign: 'middle',
                    width: '10%',
                    formatter: function (value, row, index) {
                        return '<a href="javascript:void(0)" title="delete">' +
                            '<i class="glyphicon glyphicon-trash text-danger"></i> ' +
                            '</a><a href="javascript:void(0)" title="edit">' +
                            '<i class="glyphicon glyphicon-edit text-edit"></i>' +
                            '</a>'
                    },
                    events: {
                        'click a[title=delete]': function (e, value, row, index) {
                            if (confirm('This operation is irreversible. Are you sure you want to delete it?')) {
                                $.ajax({
                                    url: 'http://localhost:3000/api/picture/deleteMovie/' + row.id,
                                    type: 'post',
                                    success: function (data, res) {
                                        if (data.code !== 200) {
                                            commonUtil.message('Delete failed', 'warning')
                                            return
                                        }
                                        commonUtil.message('Delete succeeded')
                                        $("#table").bootstrapTable("refresh", {
                                            silent: true
                                        });
                                    },
                                    error: function (data, err) {
                                        console.log(err)
                                    }
                                });
                            }
                        },
                        'click a[title=edit]': function (e, value, row, index) {
                            $.ajax({
                                url: 'http://localhost:3000/api/picture/getMovieById/' + row.id,
                                type: 'get',
                                success: function (data, res) {
                                    if (data.code !== 200) {
                                        commonUtil.message('Get Movie failed', 'warning')
                                        return
                                    }
                                    console.log(data)
                                    $("#movie_title_c").val(data.data.movie_title)
                                    $("#movie_time_c").val(data.data.movie_time)
                                },
                                error: function (data, err) {
                                    console.log(err)
                                }
                            });

                            $('#editMovie').modal('show')

                            $("#submitChange").click(function () {
                                $("#submitChangeForm").ajaxSubmit(function (data) {
                                    console.log(data)
                                    var movie_title = $("#movie_title_c").val();
                                    var movie_time = $("#movie_time_c").val();
                                    var movie_type = $('#movie_type_c option:selected').text()
                                    var movie_image = data.path.replaceAll('\\', '/')
                                    console.log(movie_title, movie_time, movie_type, movie_image);
                                    var data = { movie_title: movie_title, movie_time: movie_time, movie_type: movie_type, movie_image: movie_image }
                                    $.ajax({
                                        url: 'http://localhost:3000/api/picture/editMovie/' + row.id,
                                        data: data,
                                        type: 'post',
                                        success: function (data, res) {
                                            if (data.code !== 200) {
                                                commonUtil.message('edit failed', 'warning')
                                                return
                                            }
                                            commonUtil.message('edit succeeded')
                                            $('#editMovie').modal('hide')
                                            $("#submitChangeForm")[0].reset()
                                            $("#table").bootstrapTable("refresh", {
                                                silent: true
                                            });
                                        },
                                        error: function (data, err) {
                                            console.log(err)
                                        }
                                    });
                                });
                            });
                        }
                    }
                }
                ]
            })
        });

        $("#upload").click(function () {
            $("#uploadForm").ajaxSubmit(function (data) {
                var movie_title = $("#movie_title").val();
                var movie_time = $("#movie_time").val();
                var movie_type = $('#movie_type option:selected').text()
                var movie_image = data.path.replaceAll('\\', '/')
                console.log(movie_title, movie_time, movie_type, movie_image);
                var data = { movie_title: movie_title, movie_time: movie_time, movie_type: movie_type, movie_image: movie_image }
                $.ajax({
                    url: 'http://localhost:3000/api/picture/movie',
                    data: data,
                    type: 'post',
                    success: function (data, res) {
                        if (data.code !== 200) {
                            commonUtil.message('Upload failed', 'warning')
                            return
                        }
                        commonUtil.message('Upload succeeded')
                        $("#uploadForm")[0].reset()
                    },
                    error: function (data, err) {
                        console.log(err)
                    }
                });
            });
        });

    </script>
</body>

</html>